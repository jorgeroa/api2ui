{
  "name": "@api2ui/mcp-server",
  "version": "0.1.0",
  "type": "module",
  "description": "MCP server that turns any API into semantic-aware tools for Claude Desktop, Cursor, and other MCP clients",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "api2ui-mcp": "./bin/api2ui-mcp"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:run": "vitest run"
  },
  "dependencies": {
    "@api2ui/semantic-analysis": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "tsup": "^8.5.1",
    "typescript": "~5.9.3",
    "vitest": "^4.0.18"
  }
}
